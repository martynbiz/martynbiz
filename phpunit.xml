         backupStaticAttributes="false"
         bootstrap="modules/Application/src/Test/bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false">
    <testsuites>
        <testsuite name="Application Test Suite">
            <directory>./modules/Application/src/Test</directory>
        </testsuite>
        <testsuite name="Auth Test Suite">
            <directory>./modules/Auth/src/Test</directory>
        </testsuite>
        <testsuite name="Blog Test Suite">
            <directory>./modules/Blog/src/Test</directory>
        </testsuite>
    </testsuites>
</phpunit>
