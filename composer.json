{
    "name": "martynbiz/slim-modules-app",
    "description": "Slim modules skeleton app",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "url": "https://github.com/martynbiz/slim-module.git",
            "type": "git"
        },
	    {
            "url": "https://github.com/martynbiz/slim-module-blog.git",
            "type": "git"
        },
	    {
            "url": "https://github.com/martynbiz/php-helpers.git",
            "type": "git"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "martynbiz/slim-module-blog": "dev-master",
        "martynbiz/php-helpers": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8.*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "App/"
        }
    },
    "scripts": {
        "post-install-cmd": ["php cli.phar modules:install"],
        "post-update-cmd": ["php cli.phar modules:install"],
    }
}
